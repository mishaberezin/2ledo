{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@arenda/components/*": ["app/components/*"],
      "@arenda/assets/*": ["app/assets/*"],
      "@arenda/constants/*": ["app/constants/*"],
      "@arenda/data/*": ["app/data/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
